<%= render DaisyUI::Alert.new(
  text: 'we use cookies for no reason.',
  vertical: true,
  icon: info_icon(class: 'h-6 w-6 shrink-0')
) do |component| %>
  <% component.with_actions do %>
    <%= render DaisyUI::Button.new(text: "Deny", size: :sm) %>
    <%= render DaisyUI::Button.new(text: "Accept", size: :sm, color: :primary) %>
  <% end %>
<% end %>
