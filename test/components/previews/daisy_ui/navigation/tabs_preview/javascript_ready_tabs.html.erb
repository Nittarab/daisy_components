<%= render DaisyUI::Tabs.new(style: :bordered, class: 'mb-4', data: { controller: 'tabs' }) do |tabs| %>
  <% tabs.with_tab(text: 'Profile', active: true) do %>
    <div class="p-4">
      <h3 class="font-bold">Profile Settings</h3>
      <p>Manage your profile information and preferences.</p>
    </div>
  <% end %>
  <% tabs.with_tab(text: 'Account') do %>
    <div class="p-4">
      <h3 class="font-bold">Account Settings</h3>
      <p>Update your account details and security settings.</p>
    </div>
  <% end %>
  <% tabs.with_tab(text: 'Billing') do %>
    <div class="p-4">
      <h3 class="font-bold">Billing Information</h3>
      <p>View and manage your subscription and payment methods.</p>
    </div>
  <% end %>
  <% tabs.with_tab(text: 'Notifications') do %>
    <div class="p-4">
      <h3 class="font-bold">Notification Preferences</h3>
      <p>Configure how and when you receive notifications.</p>
    </div>
  <% end %>
<% end %>