<%# @label Dropdown Features %>
<%# @display height 300 %>

<div class="flex flex-wrap items-center justify-center gap-4">
  <%= render(DaisyComponents::Actions::DropdownComponent.new(
    trigger: {
      text: "Settings",
      icon: helpers.warning_icon('h-5 w-5')
    },
    items: [
      { text: "Profile", href: "#", icon: helpers.warning_icon('h-5 w-5') },
      { text: "Settings", href: "#", icon: helpers.warning_icon('h-5 w-5') },
      { type: :divider },
      { text: "Help", href: "#", icon: helpers.warning_icon('h-5 w-5') },
      { text: "Logout", href: "#", icon: helpers.warning_icon('h-5 w-5'), variant: :error }
    ],
    class: 'mb-32'
  )) %>

  <%= render(DaisyComponents::Actions::DropdownComponent.new(
    variant: :primary,
    hover: true,
    trigger: { text: "Hover me" },
    items: [
      { text: "Auto-open on hover", href: "#" }
    ],
    class: 'mb-32'
  )) %>

  <%= render(DaisyComponents::Actions::DropdownComponent.new(
    variant: :ghost,
    open: true,
    trigger: { text: "Always open" },
    items: [
      { text: "Forced open state", href: "#" }
    ],
    class: 'mb-32'
  )) %>
</div> 
