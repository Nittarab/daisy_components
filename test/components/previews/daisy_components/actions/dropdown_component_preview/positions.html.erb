<%# @label Dropdown Positions %>
<%# @display height 400 %>

<div class="flex flex-wrap items-center justify-center gap-4 min-h-[400px]">
  <% positions.each do |position| %>
    <%= render(DaisyComponents::Actions::DropdownComponent.new(
      position: position,
      trigger: { text: position.titleize },
      items: [
        { text: "Item 1", href: "#" },
        { text: "Item 2", href: "#" }
      ]
    )) %>
  <% end %>
</div> 