<%= render(DaisyComponents::DataDisplay::CardComponent.new(image_full: true)) do |component| %>
  <% component.with_figure do %>
    <%= tag.img(src: 'https://placehold.co/800x400/3B82F6/FFFFFF?text=Full+Width+Image') %>
  <% end %>
  <% component.with_body do |body| %>
    <% body.with_title do %>
      Full-width Image Card
    <% end %>
    <% body.with_description do %>
      <p>This card features an image that spans the full width of the card.</p>
    <% end %>
    <% body.with_actions do |actions| %>
      <button class="btn btn-primary">Action</button>
    <% end %>
  <% end %>
<% end %> 