<%= render(DaisyComponents::DataDisplay::CardComponent.new(class: 'card-side')) do |component| %>
  <% component.with_figure do %>
    <%= tag.img(src: 'https://placehold.co/300x400/3B82F6/FFFFFF?text=Side+Image') %>
  <% end %>
  <% component.with_body do |body| %>
    <% body.with_title do %>
      Side Image Card
    <% end %>
    <% body.with_description do %>
      <p>This card layout places the image on the side, creating a horizontal arrangement.</p>
    <% end %>
    <% body.with_actions do |actions| %>
      <button class="btn btn-primary">Action</button>
    <% end %>
  <% end %>
<% end %> 