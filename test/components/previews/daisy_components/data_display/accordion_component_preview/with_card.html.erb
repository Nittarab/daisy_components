<%= render(DaisyComponents::DataDisplay::AccordionComponent.new) do |component| %>
  <% component.with_item(title: 'Card Example') do %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Card Title</h2>
        <p>Card content goes here.</p>
      </div>
    </div>
  <% end %>

  <% component.with_item(title: 'Basic Card') do %>
    <%= render(DaisyComponents::DataDisplay::CardComponent.new(
      title: 'Simple Card',
      description: 'A basic card with just title and description.'
    )) %>
  <% end %>

  <% component.with_item(title: 'Interactive Card with Image') do %>
    <%= render(DaisyComponents::DataDisplay::CardComponent.new(
      glass: true,
      title: 'Feature Card',
      description: content_tag(:div) do %>
        <p class="text-base-content/70 mb-4">
          This is a more complex example showing how cards can be nested inside accordion items. 
          The card includes an image, description, and multiple actions.
        </p>
        <div class="flex gap-2 items-center text-sm text-base-content/60">
          <%= render(DaisyComponents::DataDisplay::BadgeComponent.new('Feature', variant: 'primary')) %>
          <%= render(DaisyComponents::DataDisplay::BadgeComponent.new('Example', variant: 'ghost')) %>
          <%= render(DaisyComponents::DataDisplay::BadgeComponent.new('Demo', variant: 'outline')) %>
        </div>
      <% end,
      image_url: 'https://placehold.co/600x400/3B82F6/FFFFFF?text=Card+Image',
      button_text: 'Primary Action',
      button_class: 'btn btn-primary'
    )) %>
  <% end %>

  <% component.with_item(title: 'Side Image Card') do %>
    <%= render(DaisyComponents::DataDisplay::CardComponent.new(
      style: :side,
      title: 'Side Card',
      description: 'A card with a side image layout.',
      image_url: 'https://placehold.co/300x200/3B82F6/FFFFFF?text=Side+Image',
      button_text: 'Learn More',
      button_class: 'btn btn-ghost'
    )) %>
  <% end %>

  <% component.with_item(title: 'Compact Card with Variants') do %>
    <%= render(DaisyComponents::DataDisplay::CardComponent.new(
      style: :compact,
      bordered: true,
      glass: true,
      title: 'Compact Card',
      title_tag: :h3,
      description: content_tag(:div) do %>
        <p>A compact card with bordered and glass variants.</p>
        <%= render(DaisyComponents::DataDisplay::BadgeComponent.new('Compact', variant: 'secondary')) %>
      <% end,
      button_text: 'Action',
      button_class: 'btn btn-outline'
    )) %>
  <% end %>
<% end %> 